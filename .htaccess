<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. Rewrite requests to the root to the public subdirectory
    RewriteRule ^$ cocktail-verification/public/ [L]

    # 2. Rewrite any other requests that are not a file or directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ cocktail-verification/public/$1 [L]
</IfModule>
